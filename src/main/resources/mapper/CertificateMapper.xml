<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oym.cms.mapper.CertificateMapper">

    <insert id="addCertificate" parameterType="com.oym.cms.entity.Certificate">
        INSERT INTO
        tb_certificate
        (user_id,certificate_id,certificate_name,certificate_description,certificate_type,
        certificate_win_time)
        VALUES 
        (#{userId},#{certificateId},#{certificateName},
        #{certificateDescription},#{certificateType},
        #{certificateWinTime})
    </insert>
    
    <select id="queryCertificateByUserId" resultType="com.oym.cms.entity.Certificate">
        SELECT 
        *
        FROM 
        tb_certificate
        WHERE 
        user_id = #{userId}
        ORDER BY
        certificate_win_time
        DESC 
        LIMIT #{rowIndex},#{pageSize}
    </select>

    <select id="queryCertificateCountByUserId" resultType="int">
        SELECT 
        count(*) 
        FROM 
        tb_certificate
        WHERE 
        user_id = #{userId}
    </select>

    <select id="queryCertificateByCondition" resultType="com.oym.cms.entity.Certificate">
        SELECT 
        *
        FROM 
        tb_certificate s
        WHERE
        <where>
            <if test="certificateCondition.userId != null">
                AND
                s.user_id = #{userId}
            </if>
            <if test="certificateCondition.certificateName != null">
                AND
                s.certificate_name
                LIKE
                '%${certificateCondition.certificateName}%'
            </if>
        </where>
        ORDER BY
        s.certificate_win_time
        DESC 
        LIMIT #{rowIndex},#{pageSize}
    </select>

    <select id="queryCertificateCountByCondition" resultType="int">
        SELECT
        count(*)
        FROM
        tb_certificate s
        WHERE
        <where>
            <if test="certificateCondition.userId != null">
                AND
                s.user_id = #{userId}
            </if>
            <if test="certificateCondition.certificateName != null">
                AND
                s.certificate_name
                LIKE
                '%${certificateCondition.certificateName}%'
            </if>
        </where>
    </select>
</mapper>